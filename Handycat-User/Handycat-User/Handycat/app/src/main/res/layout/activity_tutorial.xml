<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82B1FF"
    tools:context="ph.codeaxis.android.handycat.FreshStart.Landing"
    >

        <Button
            android:id="@+id/nav1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/navigationcircles"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="45dp"
            android:layout_marginTop="500dp" />

        <Button
            android:id="@+id/nav2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/navigationcircles"
            app:layout_constraintLeft_toRightOf="@+id/nav1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/nav3"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="500dp" />

        <Button
            android:id="@+id/nav3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/navigationcircles"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/nav4"
            app:layout_constraintLeft_toRightOf="@+id/nav2"
            tools:layout_editor_absoluteX="136dp"
            android:layout_marginTop="500dp" />

        <Button
            android:id="@+id/nav4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/navigationcircles"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@+id/nav3"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/nav5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/navigationcircles"
            app:layout_constraintLeft_toRightOf="@+id/nav4"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="500dp" />

        <Button
            android:id="@+id/nav6"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/navigationcircles"
            app:layout_constraintLeft_toRightOf="@+id/nav5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.161"
            android:layout_marginTop="500dp" />

        <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tutorial_pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/continuebtn"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="#AADAFB"
            android:text="@string/continuebtn"
            android:textAllCaps="false"
            android:textSize="22dp"
            android:textColor="#FFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>